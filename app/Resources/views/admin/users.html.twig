{% extends 'base.html.twig' %}

{% block body %}

    <h1>Список пользователей</h1>
    <table class="table table-striped">
        <tr>
            <th>id</th>
            <th>Логин</th>
            <th>Пароль</th>
            <th>Сумма часов</th>
            <th></th>
        </tr>

        {% for user in users %}
            <tr>
                <td>{{ user.0.id }}</td>
                <td>{{ user.0.username }}</td>
                <td>{{ user.0.getpassword }}</td>
                <td>{{ user.hours }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('admin_report', {'id': user.0.id,'year': from.format('Y'), 'month': from.format('m')}) }}">
                        Открыть
                    </a>
                </td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}
